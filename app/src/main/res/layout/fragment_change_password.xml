<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="?attr/supportCenterInfoBgStyle"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/x0"
    android:background="@null"
    android:orientation="vertical">

    <LinearLayout
        style="?attr/supportCenterInfoBgStyle"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            style="?attr/allPageCardHeaderStyle"
            android:text="@string/change_password" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:padding="@dimen/x10">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/x8">

                <TextView
                    android:id="@+id/tv_userNameLabel"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.40"
                    android:text="@string/userName" />

                <TextView
                    android:id="@+id/tv_userName"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.60"
                    android:text="Ahsan" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/x8">

                <TextView
                    android:id="@+id/tv_emailLabel"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="@string/userEmail" />

                <TextView
                    android:id="@+id/tv_email"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:text="Ahsan@gmail.com" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/x8">

                <TextView
                    android:id="@+id/tv_oldPasswordLabel"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="@string/userOldPassword" />

                <EditText
                    android:id="@+id/tv_oldPassword"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/edittext_borderline"
                    android:hint="@string/userOldPassword"
                    android:inputType="textPassword"
                    android:textSize="@dimen/s13"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/x8">

                <TextView
                    android:id="@+id/tv_newPasswordLabel"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.4"
                    android:text="@string/userNewPassword" />

                <EditText
                    android:id="@+id/tv_newPassword"
                    style="?attr/supportCenterInfoAddressTextStyle"
                    android:layout_width="0dp"
                    android:layout_weight="0.6"
                    android:background="@drawable/edittext_borderline"
                    android:hint="@string/userNewPassword"
                    android:inputType="textPassword"
                    android:textSize="@dimen/s13"/>
            </LinearLayout>


            <Button
                android:id="@+id/btn_changePassword"
                style="?attr/roundSkyBlueButtonColorStyle"
                android:layout_marginTop="@dimen/x25"
                android:layout_marginBottom="@dimen/x5"
                android:layout_marginStart="@dimen/x5"
                android:layout_marginEnd="@dimen/x5"
                android:text="@string/change_password" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>
