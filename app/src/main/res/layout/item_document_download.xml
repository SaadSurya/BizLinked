<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/x10">

        <FrameLayout
            android:id="@+id/framePdfIconContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:layout_gravity="center">

            <ImageView
               android:id="@+id/ivPdfIcon"
               style="?attr/documentDownloadImageStyle"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:paddingStart="@dimen/x5">

            <TextView
                android:id="@+id/tvDocumentDownloadName"
                style="?attr/documentDownloadFileNameStyle"/>


            <TextView
                android:id="@+id/tvDocumentDownloadSize"
                style="?attr/documentDownloadFileSizeStyle"/>



        </LinearLayout>

        <FrameLayout
            android:id="@+id/frameDownloadIconContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.15"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/ivDownloadIcon"
                style="?attr/documentDownloadImageStyle"
                android:src="@drawable/ic_download"/>

        </FrameLayout>

    </LinearLayout>

    <View
        android:layout_margin="@dimen/x0"
        style="?attr/supportCenterInfoSeperaterLineStyle"/>

</LinearLayout>